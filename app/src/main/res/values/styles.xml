<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/light</item>
        <item name="android:textColorSecondary">@color/light</item>
    </style>

    <style name="WidgetTextLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="TextView" parent="@android:style/TextAppearance.Widget.TextView">

    </style>
    <style name="TextView.Label">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
